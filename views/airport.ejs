<!DOCTYPE html>
<html lang="sv">
<head>
    <%- include('./partials/head'); %>
    <%- include('./partials/reset'); %>
    <%- include('./partials/styles'); %>
    <title><%= airportName %> | <%= title %></title>
    <style>
        .title {
            display: flex;
            gap: 1rem;
            align-items: baseline;
        }

        nav {
            margin-bottom: 1.5rem;
        }

        nav ol {
            list-style: none;
            padding: 0;
            display: flex;
            gap: 0.5rem;
        }

        nav ol li {
            color: var(--off-white);
        }

        nav ol li a {
            font-size: 1rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.75rem;
            overflow: hidden;
            margin: 0 -0.25rem;
        }

        th {
            font-weight: bold;
            color: var(--yellow);
        }

        td {
            color: var(--off-white);
        }

        th, td {
            text-align: start;
            padding: 0.25rem 0 0.25rem 0.25rem;
        }

        th:nth-child(4), td:nth-child(4) {
            width: 100%;
        }

        th:nth-child(1), td:nth-child(1),
        th:nth-child(2), td:nth-child(2),
        th:nth-child(3), td:nth-child(3) {
            padding-right: 1rem;
        }

        th:nth-child(4), td:nth-child(4) {
            white-space: pre-wrap;
        }

        tr:nth-child(even) {
            background-color: var(--dark-blue);
        }

        @media (min-width: 500px) {
            table {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <div class="title">
        <h1><%= title %></h1>
        <a href="<%= switchDirection.href %>"><%= switchDirection.label %></a>
    </div>
    <nav>
        <ol>
            <li><a href="<%= homeHref %>">Flygplatser</a></li>
            <li>></li>
            <li><%= airportName %></li>
        </ol>
    </nav>
    <table>
        <thead>
            <tr>
                <th>Tid</th>
                <th>Destination</th>
                <th>Flygnummer</th>
                <th>Anm√§rkningar</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(flight => { %>
                <tr>
                    <td><%= new Date(flight.timestamp).toLocaleTimeString('sv-SE', { hour: '2-digit', minute: '2-digit' }) %></td>
                    <td><%= flight.airport %></td>
                    <td><%= flight.flightNumber %></td>
                    <td><%= flight.remarks || '' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
</body>
</html>
